{
  "targets": [
    {
      "target_name": "$testcase",
      "sources": [ "<!@(node -p 'fs.readdirSync(\"..\").filter(f => f.match(/$testcase.*\.cxx/)).map(f => path.join(\"..\", f)).join(\" \")')" ], 
      "include_dirs": ["../$srcdir/.."],
      'defines': [
        'BUILDING_NODE_EXTENSION=1',
      ],
      'conditions': [
        ['OS=="mac"',
          {
            'xcode_settings': {
              'GCC_ENABLE_CPP_RTTI': 'YES',
              'GCC_ENABLE_CPP_EXCEPTIONS' : 'YES'
            }
          }
        ],
        ['OS=="linux" or OS=="freebsd" or OS=="openbsd" or OS=="solaris"',
          {
            'cflags': [ "-Wno-unused-variable", "-Wno-unused-but-set-variable", "-Wno-unused-but-set-parameter", "-Wno-maybe-uninitialized", $cflags],
            'cflags_cc': [ "-Wno-unused-variable", "-Wno-unused-but-set-variable", "-Wno-unused-but-set-parameter", "-Wno-maybe-uninitialized", $cxxflags, $cflags],
            'cflags!': [ '-fno-exceptions' ],
            'cflags_cc!': [ '-fno-exceptions', '-fno-rtti' ]
          }
        ]
      ],
    }
  ],
}
